datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  password String 
  isAdmin Boolean
  createdAt DateTime @default(now())
}
model WatchNews {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  urlImage   String   
  title String 
  desc Boolean
  link String
  createdAt DateTime @default(now())
}

